<UserControl x:Class="SlideDock.Views.MenuGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:SlideDock.ViewModels"
             xmlns:local="clr-namespace:SlideDock.Views"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="240"
             DataContext="{Binding}">
    <Border Margin="2" Background="#22FFFFFF" CornerRadius="4"
            AllowDrop="True"
            Drop="MenuGroup_Drop"
            DragEnter="MenuGroup_DragEnter"
            DragOver="MenuGroup_DragOver">
        <Expander IsExpanded="{Binding IsExpanded}"
                  Background="Transparent"
                  BorderBrush="Transparent">
            <Expander.Header>
                <Grid Width="211">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Nome do grupo -->
                    <TextBox Grid.Column="0"
                 Text="{Binding Name, Mode=TwoWay}"
                 Background="Transparent"
                 BorderBrush="Transparent"
                 Foreground="White"
                 FontWeight="Bold"
                 HorizontalAlignment="Stretch"
                 Margin="0,0,5,0"/>

                    <!-- Botões lado a lado -->
                    <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"            
                    Margin="0,0,5,0">

                        <!-- Botão Adicionar App (usei outro ícone Free: fa-plus-circle) -->
                        <Button Style="{StaticResource IconButtonStyle}"
                    Command="{Binding AddAppCommand}"
                    ToolTip="Adicionar App a este grupo">
                            <TextBlock FontFamily="pack://application:,,,/FontAwesome.WPF;component/#FontAwesome Solid"
                    Text="&#xf0fe;"
                    Foreground="LightBlue"
                    FontSize="14"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                        </Button>

                        <!-- Botão Remover Grupo -->
                        <Button Style="{StaticResource RemoveButtonStyle}"
                    Command="{Binding RemoveGroupCommand}"
                    ToolTip="Remover Grupo">
                            <TextBlock FontFamily="pack://application:,,,/FontAwesome.WPF;component/#FontAwesome Solid"
                    Text="&#xf1f8;"
                    Foreground="OrangeRed"
                    FontSize="14"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Expander.Header>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Added ScrollViewer with discrete styling for better UX with many icons -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="300"
                              Padding="4">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Width" Value="6"/>
                            <Setter Property="Opacity" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid>
                                            <Rectangle Fill="#40FFFFFF" RadiusX="3" RadiusY="3"/>
                                            <Track Name="PART_Track" IsDirectionReversed="True">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Rectangle Fill="#80FFFFFF" RadiusX="3" RadiusY="3"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Resources>

                    <ItemsControl ItemsSource="{Binding AppIcons}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!-- Increased ItemHeight from 64 to 80 to accommodate icon + text -->
                                <WrapPanel ItemWidth="64" ItemHeight="80" Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Expander>
    </Border>
</UserControl>

<UserControl x:Class="SlideDock.Views.MenuGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:SlideDock.ViewModels"
             xmlns:local="clr-namespace:SlideDock.Views"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="240"
             DataContext="{Binding}">
    <Border Margin="2" Background="#22FFFFFF" CornerRadius="4"
            AllowDrop="True"
            Drop="MenuGroup_Drop"
            DragEnter="MenuGroup_DragEnter"
            DragOver="MenuGroup_DragOver">
        <Expander IsExpanded="{Binding IsExpanded}"
                  Background="Transparent"
                  BorderBrush="Transparent">
            <Expander.Header>
                <Grid Width="211">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Nome do grupo -->
                    <TextBox Grid.Column="0"
                 Text="{Binding Name, Mode=TwoWay}"
                 Background="Transparent"
                 BorderBrush="Transparent"
                 Foreground="White"
                 FontWeight="Bold"
                 HorizontalAlignment="Stretch"
                 Margin="0,0,5,0"/>

                    <!-- Botões lado a lado -->
                    <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"            
                    Margin="0,0,5,0">

                        <!-- Botão Adicionar App (usei outro ícone Free: fa-plus-circle) -->
                        <Button Style="{StaticResource IconButtonStyle}"
                    Command="{Binding AddAppCommand}"
                    ToolTip="Adicionar App a este grupo">
                            <TextBlock FontFamily="pack://application:,,,/FontAwesome.WPF;component/#FontAwesome Solid"
                    Text="&#xf0fe;"
                    Foreground="LightBlue"
                    FontSize="14"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                        </Button>

                        <!-- Botão Remover Grupo -->
                        <Button Style="{StaticResource RemoveButtonStyle}"
                    Command="{Binding RemoveGroupCommand}"
                    ToolTip="Remover Grupo">
                            <TextBlock FontFamily="pack://application:,,,/FontAwesome.WPF;component/#FontAwesome Solid"
                    Text="&#xf1f8;"
                    Foreground="OrangeRed"
                    FontSize="14"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Expander.Header>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <ItemsControl Grid.Row="1"
                              ItemsSource="{Binding AppIcons}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </Expander>
    </Border>
</UserControl>
<Window x:Class="SlideDock.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:SlideDock.ViewModels"
        xmlns:local="clr-namespace:SlideDock.Views"
        mc:Ignorable="d"
        Title="SlideDock" Height="600" Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <local:ExpandedDockView />
        <local:CollapsedToggleButtonView x:Name="CollapsedView">
            <local:CollapsedToggleButtonView.Style>
                <Style TargetType="local:CollapsedToggleButtonView">
                    <Style.Triggers>
                        <!-- Dock na Esquerda e Colapsado -->
                        <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Margin" Value="0"/>
                        </DataTrigger>
                        <!-- Dock na Direita e Colapsado -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsExpanded}" Value="False"/>
                                <Condition Binding="{Binding DockPosition}" Value="Right"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Margin" Value="0"/>
                        </MultiDataTrigger>
                        <!-- Dock na Esquerda e Expandido -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsExpanded}" Value="True"/>
                                <Condition Binding="{Binding DockPosition}" Value="Left"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Margin" Value="0"/>
                        </MultiDataTrigger>
                        <!-- Dock na Direita e Expandido -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsExpanded}" Value="True"/>
                                <Condition Binding="{Binding DockPosition}" Value="Right"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Margin" Value="0"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </local:CollapsedToggleButtonView.Style>
        </local:CollapsedToggleButtonView>
    </Grid>
</Window>
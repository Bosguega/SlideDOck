<Window x:Class="SlideDOck.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:SlideDOck.ViewModels"
        xmlns:converters="clr-namespace:SlideDOck.Converters"
        mc:Ignorable="d"
        Title="SlideDOck" Height="600" Width="300"
        WindowStyle="None" 
        ResizeMode="NoResize"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        AllowDrop="True"
        Drop="MainWindow_Drop"
        DragEnter="MainWindow_DragEnter">

    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AppButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#44FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RemoveButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Área expandida -->
        <Border Background="#CC2D2D30" 
                BorderBrush="#FF3E3E42" 
                BorderThickness="1" 
                CornerRadius="0,8,8,0"
                Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                HorizontalAlignment="Left" 
                Width="250">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header principal -->
                <Border Grid.Row="0" Background="#FF3E3E42">
                    <Grid>
                        <TextBlock Text="SlideDOck" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Left" 
                                   Margin="10,0,0,0"
                                   Foreground="White" 
                                   FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Style="{StaticResource IconButtonStyle}"
                                    Command="{Binding AddMenuGroupCommand}"
                                    ToolTip="Adicionar Grupo">
                                <Path Data="M12,6 L12,18 M6,12 L18,12" 
                                      Stroke="White" 
                                      StrokeThickness="2"/>
                            </Button>
                            <Button Style="{StaticResource IconButtonStyle}"
                                    Command="{Binding AddAppFromDialogCommand}"
                                    ToolTip="Adicionar App">
                                <Path Data="M12,6 L12,18 M6,12 L18,12" 
                                      Stroke="White" 
                                      StrokeThickness="2"/>
                            </Button>
                            <Button Style="{StaticResource IconButtonStyle}"
                                    Command="{Binding ToggleDockCommand}"
                                    ToolTip="Fechar">
                                <Path Data="M0,0 L10,5 L0,10 Z" 
                                      Fill="White" 
                                      Stretch="Uniform" 
                                      Width="12" 
                                      Height="12"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Barra de ferramentas -->
                <Border Grid.Row="1" Background="#FF2D2D30">
                    <TextBlock Text="Grupos de Aplicativos" 
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"
                               Foreground="LightGray" 
                               FontSize="12"/>
                </Border>

                <!-- Conteúdo dos menus -->
                <ScrollViewer Grid.Row="2">
                    <ItemsControl ItemsSource="{Binding MenuGroups}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="2" Background="#22FFFFFF" CornerRadius="4">
                                    <Expander IsExpanded="{Binding IsExpanded}" 
                                              Background="Transparent" 
                                              BorderBrush="Transparent">
                                        <Expander.Header>
                                            <Grid>
                                                <TextBox Text="{Binding Name, Mode=TwoWay}" 
                                                         Background="Transparent" 
                                                         BorderBrush="Transparent" 
                                                         Foreground="White"
                                                         FontWeight="Bold"
                                                         HorizontalAlignment="Left"
                                                         Width="180"/>
                                                <Button Style="{StaticResource RemoveButtonStyle}"
                                                        Command="{Binding RemoveGroupCommand}"
                                                        HorizontalAlignment="Right"
                                                        ToolTip="Remover Grupo">
                                                    <Path Data="M0,0 L10,10 M0,10 L10,0" 
                                                          Stroke="Red" 
                                                          StrokeThickness="2"/>
                                                </Button>
                                            </Grid>
                                        </Expander.Header>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Botão adicionar app no grupo -->
                                            <Button Grid.Row="0"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    Command="{Binding AddAppCommand}"
                                                    HorizontalAlignment="Left"
                                                    Margin="5,0,0,5"
                                                    ToolTip="Adicionar App a este grupo">
                                                <Path Data="M12,6 L12,18 M6,12 L18,12" 
                                                      Stroke="LightBlue" 
                                                      StrokeThickness="2"/>
                                            </Button>

                                            <!-- Ícones dos apps -->
                                            <ItemsControl Grid.Row="1" 
                                                          ItemsSource="{Binding AppIcons}"
                                                          AllowDrop="True"
                                                          Drop="AppIcons_Drop"
                                                          DragEnter="AppIcons_DragEnter">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Button Style="{StaticResource AppButtonStyle}"
                                                                    Command="{Binding LaunchAppCommand}"
                                                                    ToolTip="{Binding Name}"
                                                                    MouseMove="AppIcon_MouseMove">
                                                                <Image Source="{Binding IconPath}" 
                                                                       Width="24" 
                                                                       Height="24"/>
                                                            </Button>
                                                            <Button Style="{StaticResource RemoveButtonStyle}"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Top"
                                                                    Background="Red"
                                                                    ToolTip="Remover App">
                                                                <Path Data="M0,0 L8,8 M0,8 L8,0" 
                                                                      Stroke="White" 
                                                                      StrokeThickness="1"/>
                                                            </Button>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </Expander>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Botão de toggle (sempre visível) -->
        <Border Background="#CC2D2D30" 
                BorderBrush="#FF3E3E42" 
                BorderThickness="1" 
                CornerRadius="0,8,8,0"
                HorizontalAlignment="Left" 
                Width="30"
                Visibility="{Binding IsExpanded, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Button Style="{StaticResource IconButtonStyle}"
                    Command="{Binding ToggleDockCommand}"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    ToolTip="Abrir SlideDOck">
                <Path Data="M0,0 L10,5 L0,10 Z" 
                      Fill="White" 
                      Stretch="Uniform" 
                      Width="12" 
                      Height="12"
                      RenderTransformOrigin="0.5,0.5">
                    <Path.RenderTransform>
                        <RotateTransform Angle="180"/>
                    </Path.RenderTransform>
                </Path>
            </Button>
        </Border>
    </Grid>
</Window>
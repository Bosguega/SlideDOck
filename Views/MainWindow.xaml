<Window x:Class="SlideDock.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:SlideDock.ViewModels"
        xmlns:local="clr-namespace:SlideDock.Views"
        mc:Ignorable="d"
        Title="SlideDock" Height="600" Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <local:ExpandedDockView />
        <local:CollapsedToggleButtonView />
    </Grid>
</Window>